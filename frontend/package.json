{
  "name": "theo-app",
  "productName": "Theo",
  "version": "1.0.0",
  "description": "Theo desktop accessibility assistant",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build:electron": "vite build --config vite.main.config.mjs && vite build --config vite.preload.config.mjs && vite build --config vite.renderer.config.mjs",
    "dist:win": "node scripts/dist-win.cjs"
  },
  "keywords": [],
  "author": {
    "name": "Pattuv",
    "email": "161959486+Pattuv@users.noreply.github.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/vite": "^4.1.18",
    "electron": "39.2.7",
    "tailwindcss": "^4.1.18",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.23.26",
    "groq-sdk": "^0.37.0",
    "node-global-key-listener": "^0.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "ai.theo.app",
    "productName": "Theo",
    "directories": {
      "output": "out-builder"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "src/assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Theo",
      "uninstallDisplayName": "Theo",
      "deleteAppDataOnUninstall": false,
      "license": "../LICENSE"
    },
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  }
}
